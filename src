# leitura de idade 2
idade = int(input("digite sua idade:"))

# seleção da faixa etária
se idade <= 12:
    faixa_etaria = "criança"
elif idade <= 17:
    faixa_etaria = "adolescente"
elif idade <= 64:
    faixa_etaria = "adulto"
outro:
    faixa_etaria = "idoso"

#exibição da faixa etária
print(f"você está na faixa etária: {faixa_etaria}")
